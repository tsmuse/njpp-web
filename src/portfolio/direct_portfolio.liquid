---
layout: layouts/base
pagination:
  data: pages
  size: 1
  alias: dp
permalink: "portfolio/{{dp.title | slug }}/"
---
<main class="direct-portfolio">
  <nav class="floating-nav">
    <p class="site-title">Tony Santos</p>
    <ul class="floating-nav-list">
    {% for item in menus.directPortfolio %}
      <li><a href="/{{item}}/">{{ item | replace: "-", " " | capitalize }}</a></li>
    {% endfor %}
    </ul>
  </nav>
  {% include fixed-top-nav, menuToRender: menus.directPortfolio %}
  <section class="sidebar">
    <h1>{{dp.title}}</h1>
    {% for p in dp.sidebar %}
      <p>{{ p }}</p>
    {% endfor %}
  </section>
  <section class="content">
    <ul class="portfolio-items">
      {% for item in dp.items %}
        <li>
          <a href="/portfolio/{{item.title}}/">
            <h2>{{ item.title }}</h2>
            <p>{{ item.desc }}</p>
          </a>
        </li>
      {% endfor %}
    </ul>
  </section>
  {% include footer %}
</main>